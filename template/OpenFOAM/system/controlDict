FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application   simpleFoam;
//application   pimpleFoam;
//application   buoyantSimpleFoam;
//application   rhoSimpleFoam;
//application   porousSimpleFoam;
//application   interFoam;

startFrom   latestTime;
startTime   0;
stopAt   endTime;
endTime   3000;
deltaT   1.0000000000000000;

writeControl   timeStep;
//writeControl  adjustableRunTime;

writeInterval   100;
purgeWrite   0;

//custom CFD FEA SERVICE [only keep multiple Intervals]
keepInterval    0;

writeFormat   binary;
writeCompression   off;
writePrecision   6;
timeFormat   general;
timePrecision   6;
runTimeModifiable   true;

adjustTimeStep yes;
maxCo       1000.0;
maxAlphaCo  1.0;
maxDeltaT   1.0;

functions
{
        cellMax
        {
              type            volFieldValue;
              libs            ("libfieldFunctionObjects.so");
              writeControl    timeStep;
              writeInterval   1;
              writeFields     false;
              log             false;
              operation       max;
              fields (U p T);
        }

        yPlus
        {
              type            yPlus;
              libs            ("libfieldFunctionObjects.so");
        }

	residuals
	{
		type   residuals;
		functionObjectLibs   ("libutilityFunctionObjects.so");
		enabled   true;
		writeControl   timeStep;
		writeInterval   1;
		fields   (p p_rgh U h e k epsilon omega);
	}

	//forces
	//{  
